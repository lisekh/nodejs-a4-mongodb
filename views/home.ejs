<!DOCTYPE html>
<html lang="en">
<head>
    <title>Stories</title>
    <% include partials/head.ejs %>
</head>
<body>
    <div id="wrapper">
        <% include partials/sidebar.ejs %>
        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                       <a href="#menu-toggle" class="btn btn-success" id="menu-toggle">Toggle Screen</a><br/><br/>

                        <% if(typeof(stories) !== 'undefined') {%>
                           <% for(var i=0; i < stories.length; i++) { %>
                           <p class="panel panel-default">
                                <h1><a href='/stories/<%- stories[i].slug%>'><%- stories[i].title %></a></h1>
                                <small>Created by 
                                        <code><%=stories[i].author%> on <%-stories[i].created_at.toUTCString()  %> </code>
                                    </small>
                                    <br /><br />
                                <h4>
                                    <b><%- stories[i].summary %></b>
                                </h4>
                            </p>
                               <br/><br/>
                           <%}%>
                        <%}%>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <% include partials/js-includes.ejs %>
    <script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
    </script>
</body>
</html>
